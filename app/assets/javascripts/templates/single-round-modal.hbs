{{#modal-dialog close='close'}}
  <div class="col-lg-12">
    <div class="col-md-8 col-md-offset-2">
      <div class="card-container">
        <div class="single-scenerio-container">
          <p>{{model.scenerio_1}}</p>
        </div>
        <div class="scenerio-divider">
          <hr>
          <div class="scenerio-divider-or-shell">
            <p><span>or</span></p>
          </div>
        </div>
        <div class="single-scenerio-container">
          <p>{{model.scenerio_2}}</p>
        </div>
        <hr class="bottom-divider">
        <div>
          <button class="card-button card-button-yes" {{action 'upVoteRound' model.id}}>WYR</button>
          <button class="card-button card-button-no" {{action 'downVoteRound' model.id}}>NAH</button>
        </div>
      </div>
    </div>
  </div>
{{/modal-dialog}}
